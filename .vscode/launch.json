{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: StandAlone FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--timeout-keep-alive",
        "600"
      ],
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/app/service"
      },
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/app/service/venv/bin/python3"
    },
    {
      "name": "Python: Attach to FastAPI Container",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/approot"
        }
      ]
    }
  ]
}